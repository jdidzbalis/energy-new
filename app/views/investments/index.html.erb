<div class="container">
	<div class="page-header">
		<h4>Your Investments</h4>
	</div>
	<div class="row">
		<div class="span9">
				<ul class="nav nav-pills">
					<li class="active">
						<a href="#tab1" data-toggle="tab">Projects Actively Funding</a>
					</li>
					<li>
						<a href="#tab2" data-toggle="tab">Projects Under Construction</a>
					</li>
					<li>
						<a href="#tab2" data-toggle="tab">Projects In Operation</a>
					</li>
				</ul>
				<div class="tab-content">
					<% @investments.each do |investment| %>
					<% project = investment.project %>
						<% if project.inprogress? %>
							<div class="tab-pane active" id="tab1">
								<table class="table table-striped">
									<strong><%= link_to project.project_name %> by <%= project.project_owner %></strong>
									<tr>
										<th>Your Investment</th>
										<th>Percent Funded</th>
										<th></th>
										<th></th>
									</tr>
									<tr>
								    	<td><%= number_to_currency(investment.investment_fundinglevel, :precision => 0) %></td>
								    	<td><%= number_to_percentage(project.project_percentcurrentfunded, :precision => 0) %></td>
								    	<td><%= link_to "View Project", project %></td>
								    	<td><%= link_to "View Audit", project %></td>
								    </tr>
								</table>
							</div>
						<% elsif project.completed? %>
							<div class="tab-pane active" id="tab2">
								<table class="table table-striped">
									<strong><%= link_to project.project_name %> by <%= project.project_owner %></strong>
									<tr>
										<th>Your Investment</th>
										<th>Percent Funded</th>
										<th></th>
										<th></th>
									</tr>
									<tr>
								    	<td><%= number_to_currency(investment.investment_fundinglevel, :precision => 0) %></td>
								    	<td><%= number_to_percentage(project.project_percentcurrentfunded, :precision => 0) %></td>
								    	<td><%= link_to "View Project", project %></td>
								    	<td><%= link_to "View Audit", project %></td>
								    </tr>
								</table>
							</div>
						<% else project.operational? %>
							<div class="tab-pane active" id="tab3">
								<table class="table table-striped">
									<strong><%= link_to project.project_name %> by <%= project.project_owner %></strong>
									<tr>
										<th>Your Investment</th>
										<th>Percent Funded</th>
										<th></th>
										<th></th>
									</tr>
									<tr>
								    	<td><%= number_to_currency(investment.investment_fundinglevel, :precision => 0) %></td>
								    	<td><%= number_to_percentage(project.project_percentcurrentfunded, :precision => 0) %></td>
								    	<td><%= link_to "View Project", project %></td>
								    	<td><%= link_to "View Audit", project %></td>
								    </tr>
								</table>
							</div>
						<% end %>
					<% end %>
				</div>
		</div>
